<aura:component controller="DoctorAppointmentController">
    <aura:attribute name="FilterOptions" type="String[]"/>
    <aura:attribute name="AppointmentsList" type="Object"/>
    <aura:attribute name="AppointmentsColumns" type="List"/>
    <aura:handler name="init" value="{!this}" action="{!c.init}"/>
    <div class='slds-grid'>
        <div class='slds-col slds-size_1-of-4'>
            <lightning:select name="filterselect" onchange="{!c.updateAppointments}" label="Filter" aura:id="filterselect">
                <aura:iteration var="option" items="{!v.FilterOptions}">
                    <option text="{!option}"/>
                </aura:iteration>
            </lightning:select>
        </div>
    </div>
    <lightning:datatable data="{!v.AppointmentsList}"
                         columns="{!v.AppointmentsColumns}"
                         keyField="Id"
                         hideCheckboxColumn="true"/>
</aura:component>